namespace byteps.common.wire;

// Supported data types.
enum DataType:byte {
    BYTEPS_UINT8 = 0,
    BYTEPS_INT8 = 1,
    BYTEPS_UINT16 = 2,
    BYTEPS_INT16 = 3,
    BYTEPS_INT32 = 4,
    BYTEPS_INT64 = 5,
    BYTEPS_FLOAT16 = 6,
    BYTEPS_FLOAT32 = 7,
    BYTEPS_FLOAT64 = 8,
    BYTEPS_BOOL = 9
}

namespace byteps.xla.wire;

table TensorShape {
    dims:[long];
}

table CustomCallConfig {
    tensor_name:string;
    tensor_type:common.wire.DataType;
    input_shapes:[TensorShape];
    output_shapes:[TensorShape];

    // Reduce op.
    reduce_op:int;
}
